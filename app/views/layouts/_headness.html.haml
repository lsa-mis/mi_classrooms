%nav.static.bg-blue-900.shadow.min-w-screen{data: {controller: "dropdown"}}
  .w-auto.max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8
    .flex.justify-between.h-16

      .flex-shrink-0.flex.items-center
        .flex
          =link_to root_path do
            .flex.items-center
              .inline-block.h-8.justify-self-start.content-start.items-start= image_tag 'block_m-hex.png', alt: 'University of Michigan Logo', height: '35.75', width: '50', class: ''
              %span.text-white.font.text-3xl.pl-2.font-sans.font-medium
                Classrooms
          
        .hidden.sm:ml-6.sm:flex.sm:space-x-4.pl-2
          .border-transparent.text-blue-50.hover:border-blue-300.hover:text-white.inline-flex.items-center.pl-1.pt-1.border-b-2.text-base.font-normal= link_to "Find a Room", rooms_path, class: "#{class_names(active: current_page?(rooms_path))}" if user_signed_in?
          .border-transparent.text-blue-50.hover:border-blue-300.hover:text-white.inline-flex.items-center.pr-1.pt-1.border-b-2.text-base.font-normal= link_to "Room Filters Glossary", room_filters_glossary_path, class: "#{class_names(active: current_page?(room_filters_glossary_path))}" if user_signed_in?
          .border-transparent.text-blue-50.hover:border-blue-300.hover:text-white.inline-flex.items-center.pr-1.pt-1.border-b-2.text-base.font-normal= link_to "About", about_path, class: "#{class_names(active: current_page?(about_path))}"

          - if user_signed_in? && policy(Announcement).edit?
            .border-transparent.text-blue-50.hover:border-blue-300.hover:text-white.inline-flex.items-center.pr-1.pt-1.border-b-2.text-base.font-normal= link_to "Announcements", announcements_path, class: "#{class_names(active: current_page?(announcements_path))}"

          - if user_signed_in? && policy(Announcement).edit?
            .border-transparent.text-blue-50.hover:border-blue-300.hover:text-white.inline-flex.items-center.pr-1.pt-1.border-b-2.text-base.font-normal= link_to "AdminDoc", "https://docs.google.com/document/d/1wg_MvJRzeZwl8x1292AYp3JoS4AHd1xSgw7THpqflCU/edit?usp=sharing", target: "_blank"


      .hidden.sm:ml-6.sm:flex.sm:items-center
        .ml-2.relative
          %div.grid.justify-items-end.flex.flex-wrap.items-center
            - if user_signed_in?
              %button#user-menu-button.bg-white.rounded-full.flex-1.text-sm.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-blue-500{"aria-expanded" => "false", "aria-haspopup" => "true", type: "button", "data-action" => "click->dropdown#toggle click@window->dropdown#hide"}
                %span.sr-only Open user menu
              .leading-tight.text-sm.font-medium.text-white=current_user.email
              = button_to destroy_user_session_path, method: :delete, role: "menuitem", tabindex: "-1", data: {turbo: "false"} do
                .px-1.ml-2.shadow-sm.font-medium.rounded.text-blue-900.bg-yellow-550.hover:bg-yellow-500.flex-1.hover:underline Sign Out


            - else
              .user-action-links 
                = button_to user_saml_omniauth_authorize_path, data: {turbo: "false"} do
                  .px-1.shadow-sm.font-medium.rounded.text-blue-900.bg-yellow-550.hover:bg-yellow-500.hover:underline Sign In

      .sm:hidden.items-center.mt-1= render './layouts/headness_mobile_menu_toggle.html.haml'

    = render './layouts/headness_mobile_menu_dropdown'
