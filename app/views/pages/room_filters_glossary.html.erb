<div class="container px-1 mb-20">
<div id="maincontent"></div>
  <h1>Room Filters Glossary</h1>
  <div class="flex-auto justify-center py-2 ml-4">
    <% for char in 'A' ... 'Z' do %>
      <% if @category_letters.include?(char) %>
        <span class="p-2 text-sm text-black hover:underline">
          <a aria-label='link to #<%= "#{char}" %> heading' aria-describedby='Letter_<%= "#{char}" %>' href='room_filters_glossary#<%= "#{char}" %>'>
          <span id='Letter_<%= "#{char}" %>'><%= "#{char}" %></span></a> 
        </span>
      <% else %>
        <span class="p-2 text-sm text-gray-400"><%= "#{char}" %></span>
      <% end %>
    <% end  %>
  </div>
  <div>
    <% prev_cat = "" %> 
    <% @all_characteristics_array.sort.each do |category, list| %>
      <% cat = category[0] %>
      <% if cat != prev_cat %>
        <div class="mb-2" id="<%= cat %>">
          <a href="<%= cat %>" style="display: none;"><%= cat %></a>
          <% prev_cat = cat %>
      <% else %>
        <div class="mb-2">
      <% end %>
        <div class="flex items-center">
          <div class="flex-1">
            <h2><%= category %></h2>
          </div>
        </div>
        <ul class="ml-4 text-base">
          <% list.each do |filter, descr| %>
            <li class="font-semibold ml-2">
              <%= descr %>:
              <div class="inline-block font-normal">
                <%= @filters_hash[filter] %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="py-2 pl-2 mb-20">
    <%= link_to 'Back to Previous Page', :back, class: "hover:underline text-blue-800", data: {turbo: "false"} %>
  </div>
</div>
