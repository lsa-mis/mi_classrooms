<h1>Announcements</h1>

<div class="">
  <div class="">
    <table class="border-collapse border border-gray-400">

      <thead>
        <tr>
          <th scope="col" class="border border-gray-400 text-left p-2">Location</th>
          <th scope="col" class="border border-gray-400 text-left p-2">Content</th>
          <th scope="col" class="border border-gray-400 text-left p-2">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @announcements.each do |announcement| %>
          <tr class="border-black">
            <td class="border border-gray-400 p-2"><%= announcement.location %></td>
            <td class="border border-gray-400 p-2"><%= announcement.content %></td>
            <td class="border border-gray-400 p-2">
              <%= link_to 'Edit', edit_announcement_path(announcement), class: "px-2 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
