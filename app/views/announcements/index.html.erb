<h1>Application Settings</h1>

<div class="flex flex-col h-2/3">
  <div class="lex-grow overflow-auto shadow rounded-md">
    <table class="relative w-full">

      <thead>
        <tr>
          <th scope="col">Location</th>
          <th scope="col">Content</th>
          <th scope="col">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @announcements.each do |announcement| %>
          <tr class="border-b border-gray-100">
            <td class="border-r-2 border-dotted"><%= announcement.location %></td>
            <td class="text-left"><%= announcement.content %></td>
            <td class="">
              <ul>
                <li class="px-2 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400"><%= link_to 'Edit', edit_announcement_path(announcement) %></li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
