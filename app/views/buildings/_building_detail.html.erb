<div class="relative">
  <div class="max-w-3xl mx-2 py-4 px-2 w-screen" >
    <h2 class="sr-only"><%= @building.name  %></h2>
    <div class="grid grid-cols-1 gap-y-4 place-content-center" >
      <div class="bg-white border border-gray-300 rounded-lg flex flex-col overflow-hidden">
        <div class="px-2 py-2 space-y-4 flex flex-col" >
          <div class="flex flex-row justify-center w-full " >
              <% if @building.building_image.representable? %>
                <%= image_tag(@building.building_image.representation(resize_to_limit: [200, 200]), class: "building_image pr-2") %>
              <% else %>
                <%= image_tag("building_placeholder.png", height: '100', width: '200', class: "building_image") %>
              <% end %>
            <div class="md:text-2xl font-medium text-gray-900 sm:text-base" >
              <div class="truncate">
                <%= @building.name  %>
              </div>
              <div class="text-sm">
                <%= @building.abbreviation  %>
              </div>
              <div class="text-base">
                <%= @building.address %>
                <br>
                  <%= @building.city %>, <%= @building.state %> <%= @building.zip %>
              </div>
              <div class="h-layout h-highlight-item">
                <%= svg("chalkboard-teacher")  %>
                <%= link_to 'Classrooms located in this building', rooms_path(:building_bldrecnbr => @building.bldrecnbr) %>
              </div>
              <div class="text-sm">
                <%= link_to 'Back', buildings_path %> |
                <%= link_to 'Edit', edit_building_path(@building) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

