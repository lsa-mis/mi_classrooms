              .ml-1.lg:ml-4
                %h5= "Support provided by #{room.department_name}"

                %ul

                  %li
                    .icon= svg("phone")
                    = "#{room.room_support_phone}"
                  %li
                    .icon= svg("envelope")
                    = "#{room.room_support_email}"
          .mt-6
            - unless action_name == 'show'
              .rounded-md.shadow


