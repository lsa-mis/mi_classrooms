%h1 Listing rooms


= form_with url: rooms_path, method: :get, class: "" do |form|
  .relative.top-0.left-0.pl-4.flex.items-center.pointer-events-none
    %svg.h-5.w-5.text-gray-600{fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
      %path{"clip-rule" => "evenodd", d: "M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z", "fill-rule" => "evenodd"}

  - if params[:query].blank? 
    = form.text_field :query, class: "search-by-building-name", :placeholder => "Undergraduate Sciences Building"
  - else
    = form.text_field :query, class: 'search-by-building-name', value: params[:query]



  = render partial: './search/filters'

