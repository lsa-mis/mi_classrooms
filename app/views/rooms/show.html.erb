        <%= svg("message_question")  %>
        <span>Support</span>
      </div>
      <div class="h-layout h-highlight-item">
        <%= svg("chair") %>
        <div class="span">Room Layout</div>
      </div>
      <div class="h-floorplan h-highlight-item">
        <%= svg("layer_group") %>
        <span>Floor Map <%= @room.floor %> </span>
      </div>
    </div>
  </div>


