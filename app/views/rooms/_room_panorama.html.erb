<div class="room-show-image">
<% if @room.room_panorama.attached? %>
  <div id="panorama">
    <script>
      pannellum.viewer('panorama', {
        "type": "equirectangular",
        "panorama": "<%= "#{url_for(@room.room_panorama)}" %>",
        "preview": "<%= "#{url_for(@room.room_panorama.variant(resize: 0.25).processed)}" %>",
        "autoLoad": false
      });
    </script>
  </div>
<% else %>
  <%= room_image(@room) %>
<% end %>
</div>
