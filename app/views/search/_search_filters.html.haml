
.bg-white
  %section.relative.z-10.border-t.border-b.border-gray-200.grid.items-center{"aria-labelledby" => "filter-heading", "data-controller" => "toggle"}
    
    %h2#filter-heading.sr-only Filters
    .relative.col-start-1.row-start-1.py-4
      .max-w-7xl.mx-auto.flex.space-x-6.divide-x.divide-gray-200.text-sm.px-4.sm:px-6.lg:px-8
        %div
          -#UI When active: highlight
          %button.group.text-gray-700.font-medium.flex.items-center{"aria-controls" => "disclosure-1", "aria-expanded" => "false", type: "button", "data-action" => "click->toggle#toggle touch->toggle#toggle"}
            / Heroicon name: solid/filter
            %svg.flex-none.w-5.h-5.mr-2.text-gray-400.group-hover:text-gray-500{"aria-hidden" => "true", fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
              %path{"clip-rule" => "evenodd", d: "M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z", "fill-rule" => "evenodd"}
            -#UI update # of filters
            2 Filters
        .pl-6
          -#UI reset form
          
          .text-gray-500= link_to "Clear all", rooms_path


    .col-start-2
      
      - if user_signed_in?
        %span.text-muted{"data-autosubmit-target" => "status"}
        .text-sm.font-medium.text-blue-700.inline-flex.object-contain= "#{@pagy.count} Results"
      - else
        .font-bold.text-yellow-800.text-base.w-auto.block Please sign in to see results.            
 
    .col-start-3.row-start-1.py-4{"data-controller" => "toggle"}
      .flex.justify-end.max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8
        .relative.inline-block
          .flex
            %button#menu-button.group.inline-flex.justify-center.text-sm.font-medium.text-gray-700.hover:text-gray-900{"aria-expanded" => "false", "aria-haspopup" => "true", type: "button", "data-action" => "click->toggle#toggle touch->toggle#toggle"}
              Sort
              / Heroicon name: solid/chevron-down
              %svg.flex-shrink-0.-mr-1.ml-1.h-5.w-5.text-gray-400.group-hover:text-gray-500{"aria-hidden" => "true", fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
                %path{"clip-rule" => "evenodd", d: "M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z", "fill-rule" => "evenodd"}
          /
            Dropdown menu, show/hide based on menu state.
            
            Entering: "transition ease-out duration-100"
            From: "transform opacity-0 scale-95"
            To: "transform opacity-100 scale-100"
            Leaving: "transition ease-in duration-75"
            From: "transform opacity-100 scale-100"
            To: "transform opacity-0 scale-95"
          .hidden.origin-top-right.absolute.right-0.mt-2.w-40.rounded-md.shadow-2xl.bg-white.ring-1.ring-black.ring-opacity-5.focus:outline-none{"aria-labelledby" => "menu-button", "aria-orientation" => "vertical", role: "menu", tabindex: "-1", "data-toggle-target" => "toggleable"}
            .py-1{role: "none"}
              /
                Active: "bg-gray-100", Not Active: ""
                
                Selected: "font-medium text-gray-900", Not Selected: "text-gray-500"
              %a#menu-item-0.font-medium.text-gray-900.block.px-4.py-2.text-sm{href: "#", role: "menuitem", tabindex: "-1"}
                Student Capacity
              %a#menu-item-1.text-gray-500.block.px-4.py-2.text-sm{href: "#", role: "menuitem", tabindex: "-1"}
                Building Name
              %a#menu-item-2.text-gray-500.block.px-4.py-2.text-sm{href: "#", role: "menuitem", tabindex: "-1"}
                Newest



    #disclosure-1.hidden.border-t.border-gray-200.py-10.col-span-3{ "data-toggle-target" => "toggleable"}
      .max-w-7xl.mx-auto.grid.grid-cols-1.gap-x-4.px-4.text-sm.sm:px-6.md:gap-x-6.lg:px-8
      
        .filters-inner{"aria-hidden" => "true"}
          .bg-white{:class => "w-1/2"}
          .bg-gray-50{:class => "w-1/2"}


        .relative{class: "max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2"}
          %nav{class: "bg-gray-50 px-4 py-2 sm:px-6 lg:px-8 xl:pl-12", "aria-labelledby" => "characteristicsHeading"}
            %h2#characteristicsHeading.sr-only Room Characteristic checkboxes

            = render './search/student_capacity'
            = render partial: './search/school_or_college', locals: {form: form}
          -# Secondary

          %div{class: "grid  px-4  bg-white sm:grid-cols-2 sm:gap-x-8  sm:px-6 lg:px-8  xl:pr-12"}
            = render './search/room_characteristics'

            = render './search/projection_list'