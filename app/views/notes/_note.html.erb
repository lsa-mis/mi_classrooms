<%= turbo_stream_from note %>
<%= turbo_frame_tag note do %>
  <hr class= "flex-1 border-t border-blue-600 my-1">
  <div>
    <div class="w-full text-xs">
      <div class="flex text-base space-x-2 items-center pt-1">
        <% if note.alert %>
          <span><%= svg('alert') %></span>
          <div>
            <%= "#{note.noteable_type} Alert:" %>
          </div>
        <% end %>
        <div><%= note.body %></div>
      </div>
      <div class="flex items-center">
        <div>
          Updated on 
          <%= note.updated_at.strftime('%m/%d/%Y') %>
        </div>
        <div class="flex items-center p-1">
          <% if session["user_admin"] %>
            by
            <%= note.user.display_name %>
            <%= link_to "Edit", edit_note_path(note), class: "px-2 ml-2 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
            <%= button_to "Delete", note_path(note), method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-1 px-2 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  
<% end %>