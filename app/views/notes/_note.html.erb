<%= turbo_stream_from note %>
<%= turbo_frame_tag note do %>
  <hr class= "flex-1 border-t border-blue-600 mt-1 mb-2 m-2">
  <div>
    <div class="grid grid-rows-2 w-full text-sm">
      <div class="flex items-center">
        <div class="">
          <%= note.user.display_name %>
        </div>
        <div class="flex">
          <% if session["user_admin"] %>
            <%= link_to "Edit", edit_note_path(note), class: "px-2 ml-1 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" if policy(Room).edit? %>
            <%= button_to "Delete", note_path(note), method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-1 px-2 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
          <% end %>
        </div>
      </div>
      <div class="">
        <%= note.body %>
      </div>
    </div>
  </div>

  
<% end %>